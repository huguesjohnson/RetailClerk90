      "Day01IntroText":{"text":"           November 23, 1990            "},
      "Day01IntroTip0":{"text":"About fast travel.."},
      "Day01IntroTip1":{"text":"Fast travel is available under the map"},
      "Day01IntroTip2":{"text":"tab on the menu screen."},
      "Day01IntroTip3":{"text":"Fast travel may be temporarily"},
      "Day01IntroTip4":{"text":"unavailable during some events."},      
      "Day01IntroTip5":{"text":"Finishing a story event will"},      
      "Day01IntroTip6":{"text":"re-enable fast travel."},      
      "Day02IntroText":{"text":"           December 4, 1990             "},
      "Day02IntroTip0":{"text":"About optional events.."},
      "Day02IntroTip1":{"text":"Each playable character has optional"},
      "Day02IntroTip2":{"text":"events every day."},
      "Day02IntroTip3":{"text":"Optional events expire after completing"},
      "Day02IntroTip4":{"text":"story events."},      
      "Day02IntroTip5":{"text":"Missed events will not be available"},      
      "Day02IntroTip6":{"text":"in later days."},      
      "Day03IntroText":{"text":"           December 16, 1990            "},
      "Day03IntroTip0":{"text":"About the trading sequence.."},
      "Day03IntroTip1":{"text":"There are separate trading sequences"},
      "Day03IntroTip2":{"text":"for each of the playable characters."},
      "Day03IntroTip3":{"text":"Every day one or more new trades are"},
      "Day03IntroTip4":{"text":"available in the mall for them."},      
      "Day03IntroTip5":{"text":"The entire sequence can be completed"},      
      "Day03IntroTip6":{"text":"on the last day if you prefer to wait."},     
      "Day04IntroText":{"text":"           December 20, 1990            "},
      "Day04IntroTip0":{"text":"About hidden events.."},
      "Day04IntroTip1":{"text":""},
