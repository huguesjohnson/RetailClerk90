;-------------------------------------------------------------------------------
; sprite definition notes
; from: http://emu-docs.org/Genesis/Graphics/genvdp.txt
; -sprite attribute table is 640 bytes in size. 
; -each entry is 8-bytes in the following format:
;	index + 0  :   ------yy yyyyyyyy
;	index + 2  :   ----hhvv
;	index + 3  :   -lllllll
;	index + 4  :   pccvhnnn nnnnnnnn
;	index + 6  :   ------xx xxxxxxxx
; where 
;	y = vertical coordinate of sprite
;	h = horizontal size in cells (00b=1 cell, 11b=4 cells)
;	v = vertical size in cells (00b=1 cell, 11b=4 cells)
;	l = link field
;	p = priority
;	c = color palette
;	v = vertical flip
;	h = horizontal flip
;	n = sprite pattern start index
;	x = horizontal coordinate of sprite
;-------------------------------------------------------------------------------

; low version that exists for status screen
SpriteZeroLowDefinition:
	;---------------------------------------------------------------------------
	; index + 0 = vertical coordinate
	; ---- --yy yyyy yyyy
	;---------------------------------------------------------------------------
	dc.w 	$0000
	;---------------------------------------------------------------------------
	; index + 2 = size (00=8px,01=16px,11=32px)
	;---------------------------------------------------------------------------
			;----hhvv
	dc.b	%00000000	; width=8,height=8
	;---------------------------------------------------------------------------
	; index + 3 = link field
	;---------------------------------------------------------------------------
			;-lllllll
	dc.b	%00000001	; 1
	;---------------------------------------------------------------------------
	; index + 4 = priority, palette, flip, pattern
	;---------------------------------------------------------------------------
			;pccvhnnnnnnnnnnn
	dc.w 	%0000000100010000	; pri=1,palette=0,vflip=0,hflip=0,pattern=272
            ;0110000100010000

	;---------------------------------------------------------------------------
	; index + 6 = horizontal coordinate
	; ---- --yy yyyy yyyy
	;---------------------------------------------------------------------------
	dc.w 	$0000

; regular (high) version is for dialogs in the "overworld"
SpriteZeroDefinition:
	;---------------------------------------------------------------------------
	; index + 0 = vertical coordinate
	; ---- --yy yyyy yyyy
	;---------------------------------------------------------------------------
	dc.w 	$0000
	;---------------------------------------------------------------------------
	; index + 2 = size (00=8px,01=16px,11=32px)
	;---------------------------------------------------------------------------
			;----hhvv
	dc.b	%00000000	; width=8,height=8
	;---------------------------------------------------------------------------
	; index + 3 = link field
	;---------------------------------------------------------------------------
			;-lllllll
	dc.b	%00000001	; 1
	;---------------------------------------------------------------------------
	; index + 4 = priority, palette, flip, pattern
	;---------------------------------------------------------------------------
			;pccvhnnnnnnnnnnn
	dc.w 	%1000000100010000	; pri=1,palette=0,vflip=0,hflip=0,pattern=272
            ;0110000100010000

	;---------------------------------------------------------------------------
	; index + 6 = horizontal coordinate
	; ---- --yy yyyy yyyy
	;---------------------------------------------------------------------------
	dc.w 	$0000

PlayerSpriteDefinition:
	;---------------------------------------------------------------------------
	; index + 0 = vertical coordinate
	; ---- --yy yyyy yyyy
	;---------------------------------------------------------------------------
	dc.w 	SPRITE_PLAYER_INIT_Y
	;---------------------------------------------------------------------------
	; index + 2 = size (00=8px,01=16px,11=32px)
	;---------------------------------------------------------------------------
			;----hhvv
	dc.b	%00000111	; width=16,height=32
	;---------------------------------------------------------------------------
	; index + 3 = link field
	;---------------------------------------------------------------------------
			;-lllllll
	dc.b	%00000010	; 2
	;---------------------------------------------------------------------------
	; index + 4 = priority, palette, flip, pattern
	;---------------------------------------------------------------------------
			;pccvhnnnnnnnnnnn
	dc.w 	%0110000000000000	; pri=0,palette=2,vflip=0,hflip=0,pattern=0

	;---------------------------------------------------------------------------
	; index + 6 = horizontal coordinate
	; ---- --yy yyyy yyyy
	;---------------------------------------------------------------------------
	dc.w 	SPRITE_PLAYER_INIT_X

